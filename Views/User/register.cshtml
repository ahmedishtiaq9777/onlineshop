@model onlineshop.Models.Customer
<style>
    .warm{
        color:red;
        font-weight:bold;
        border: 2px solid red;
        background-color:#fcc;
    }
    .hidden{display:none;}
</style>
<section class="section white-backgorund">
    <div class="container">
        <div class="row">
            <!-- start sidebar -->
            <div class="col-sm-3">
                <div class="widget">
                    <h6 class="subtitle">New Collection</h6>
                    <figure>
                        <a href="javascript:void(0);">
                            <img src="/img/products/men_06.jpg" alt="collection">
                        </a>
                    </figure>
                </div><!-- end widget -->
            </div><!-- end col -->
            <!-- end sidebar -->
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12 text-left">
                        <h2 class="title">Create an account</h2>
                    </div><!-- end col -->
                </div><!-- end row -->

                <hr class="spacer-5"><hr class="spacer-20 no-border">

                <div class="row">
                    <div class="col-sm-12 col-md-10 col-lg-12">
                        <form class="form-horizontal"  method="post" asp-action="register">
                          
                            <div class="form-group" id="myform">
                                <label asp-for="CustomerEmail" class="col-sm-2 control-label">Email<span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control input-md" id="email" asp-for="CustomerEmail" placeholder="Email" required>
                                    <text class="text-danger">@ViewBag.error</text>
                                </div>
                            </div><!-- end form-group -->
                            <div class="form-group">
                                <label for="password" class="col-sm-2 control-label">Password <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control input-md" id="pass"  asp-for="CustomerPass" placeholder="Password" required>
                                </div>
                            </div><!-- end form-group -->
                            <div class="form-group">
                                <label for="password" class="col-sm-2 control-label">ConformPassword <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control input-md" id="cpass" asp-for="CustomerPass" placeholder="Password" required><span id="alart" class="warm hidden">Your Password NOt Match</span>
                                </div>
                            </div><!-- end form-group -->
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <input type="submit" id="sub" value="Register" />
                                </div>
                            </div><!-- end form-group -->
                        </form>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
    
</section>

@section scripts{

   <script type="text/javascript" src="http://code.jquery-1.10.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $("#email").mouseleave(function(){
               
                
            });
        
        });
    </script>
   <script type="text/javascript">
       $(document).ready(function () {
           $('#cpass').keyup(function () {
               if($(this).val()==$("#pass").val())
               {
                   $("#alart").addClass("hidden");
                   $("input[type=submit]").removeAttr("disabled");

                }
               else
               {
                   $("#alart").removeClass("hidden");
                   $("input[type=submit]").attr("disabled","disabled");
                  

                }
            });
       });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#qwerty").on('click', function () {
                alert("");
            });
        });
    </script>
}
