@model onlineshop.Models.SizeColor

@{
    ViewData["Title"] = "prosizecolor";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h3 class="text-danger">@ViewBag.error</h3>

<h2>prosizecolor</h2>

<form asp-action="prosizecolor" method="post">
    <div class="form-horizontal">
        <h4>SizeColor</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
        <div class="form-group">
            <label asp-for="Size" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductId" type="text"  value="@TempData["proid"]" class="form-control" readonly />
                <span asp-validation-for="ProductId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Size" class="btn btn-default" />       <a class="btn btn-default" asp-action="Productlist" >Done Sizing</a>     

             </div>
            
        </div>
       
    </div>
</form>
<form asp-action="Addproduct">
    <input  type="submit" value="Done Sizing" class="btn btn-default"/>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
