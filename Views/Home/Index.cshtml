<section class="section  fullscreen light-background container">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul class="nav nav-tabs style1 text-center" role="tablist">
                    <li role="presentation" class="active"><a href="#newArrivals" aria-controls="tab" role="tab" data-toggle="tab" aria-expanded="true">New Arrivals</a></li>
                    <li role="presentation" class=""><a href="#toprated" aria-controls="tab" role="tab" data-toggle="tab" aria-expanded="false">Top Rated</a></li>
                    <li role="presentation" class=""><a href="#onsale" aria-controls="tab" role="tab" data-toggle="tab" aria-expanded="false">On Sale</a></li>
                </ul><!-- end nav-tabs -->
                <!-- Tab panes -->
                <div class="tab-content">
                    @{
                        IList<Products> p1 = Model.products.Where(a => a.Type == "new" || a.Type == "NewArrival").ToList();
                        IList<Products> p2 = Model.products.Where(a => a.Type == "top" || a.Type == "toprated").ToList();
                        IList<Products> p3 = Model.products.Where(a => a.Type == "sale" || a.Type == "OnSale").ToList();


                    }
                    @Html.Partial("newarrival", p1)
                    @Html.Partial("toprated", p2)
                    @Html.Partial("onsale", p3)

                </div><!-- end tab-content -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>




